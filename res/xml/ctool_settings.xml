<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/ctool_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:id="@+id/about_crom"
        android:icon="@drawable/ic_crom_about"
        android:title="@string/about_crom_title" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.crom.about"
            android:targetClass="com.crom.about.activities.AboutActivity" />
    </PreferenceScreen>

    <!-- C-ROM OTA -->
    <PreferenceScreen
        android:key="crom_ota_start"
        android:title="@string/crom_ota_settings_title"
        android:icon="@drawable/ic_crom_ota" />

    <PreferenceCategory
        android:title="@string/interface_category">

    <!-- INTERFACE -->
    <PreferenceScreen
        android:id="@+id/interface_settings"
        android:title="@string/interface_settings_title"
        android:fragment="com.android.settings.crom.InterfaceSettings"
        android:icon="@drawable/ic_settings_interface" />

    <!-- STATUSBAR -->
    <PreferenceScreen
        android:id="@+id/statusbar_settings"
        android:title="@string/statusbar_settings_title"
        android:fragment="com.android.settings.crom.StatusBarSettings"
        android:icon="@drawable/ic_crom_statusbar" />

    <!-- Notification drawer -->
    <PreferenceScreen
        android:id="@+id/notification_drawer"
	android:title="@string/notification_drawer_title"
        android:fragment="com.android.settings.crom.NotificationDrawer"
        android:icon="@drawable/ic_crom_notification_drawer" />

    <!-- PIE -->
    <PreferenceScreen
        android:id="@+id/pie_control"
	android:title="@string/pie_control_title"
        android:fragment="com.android.settings.crom.PieControl"
        android:icon="@drawable/ic_crom_pie_control" />

    </PreferenceCategory>

    <!-- Advanced -->
    <PreferenceCategory
        android:title="@string/advanced_category_title">

    <!-- Active display -->
    <PreferenceScreen
        android:id="@+id/active_display"
        android:title="@string/active_display_title"
        android:fragment="com.android.settings.crom.ActiveDisplaySettings"
        android:icon="@drawable/ic_crom_active_display" />

    <!-- Notification drawer -->
    <PreferenceScreen
        android:id="@+id/navigation_settings"
        android:icon="@drawable/ic_settings_navigation"
        android:title="@string/navigation_settings_title"
        android:fragment="com.android.settings.crom.NavigationSettings" />

    </PreferenceCategory>

</PreferenceScreen>
